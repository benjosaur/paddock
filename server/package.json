{
  "name": "server",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "bun --watch index.ts",
    "build": "tsc && cp package.json dist/ && cp -r ../node_modules dist/ && mkdir -p dist/node_modules/shared && cp -r ../shared/. dist/node_modules/shared/ && sed -i 's/\"shared\": \"workspace:\\*\"/\"shared\": \"file:./node_modules/shared\"/' dist/package.json",
    "start": "bun run index.js",
    "db:init": "bun run db.ts init",
    "db:seed": "bun run db.ts seed",
    "db:reset": "bun run db.ts reset",
    "db:test": "bun run db.ts test"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.830.0",
    "@aws-sdk/lib-dynamodb": "^3.830.0",
    "@trpc/server": "11.2.0",
    "aws-jwt-verify": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "shared": "workspace:*",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/pg": "^8.10.9",
    "typescript": "^5.0.0"
  }
}
